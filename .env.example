CHANNEL_PREMIUM_COACHES_ID=

MONGODB_URI=
# Optional; defaults to OffsideDiscordBot
MONGODB_DB_NAME=OffsideDiscordBot
# Optional; legacy single-collection mode (record_type discriminator in one collection). Example: Isaac_Elera
MONGODB_COLLECTION=
# Optional; when true, each guild uses its own MongoDB database: "<MONGODB_GUILD_DB_PREFIX><guild_id>"
MONGODB_PER_GUILD_DB=true
# Optional; leave blank to use raw guild ID as the DB name
MONGODB_GUILD_DB_PREFIX=

# Data lifecycle (production hardening)
# Retention for audit collections (0 disables new expirations)
AUDIT_LOG_RETENTION_DAYS=180
# Retention for ops task history (0 disables TTL cleanup)
OPS_TASKS_RETENTION_DAYS=30
# Grace period before irreversible guild data deletion runs
GUILD_DATA_DELETE_GRACE_HOURS=24

USE_SHARDING=false
SHARD_COUNT=

BANLIST_SHEET_ID=
BANLIST_RANGE=
BANLIST_CACHE_TTL_SECONDS=300
GOOGLE_SHEETS_CREDENTIALS_JSON=

# Feature flags (comma-separated)
FEATURE_FLAGS=

# FC25 stats integration (requires `FEATURE_FLAGS=fc25_stats`)
FC25_STATS_CACHE_TTL_SECONDS=900
FC25_STATS_HTTP_TIMEOUT_SECONDS=7
FC25_STATS_MAX_CONCURRENCY=3
FC25_STATS_RATE_LIMIT_PER_GUILD=20
FC25_DEFAULT_PLATFORM=common-gen5

# Club ad approvals (optional; requires `FEATURE_FLAGS=club_ads_approval`)

# Web dashboard (optional; uses Discord OAuth2)
# Set the Redirect URI in the Discord Developer Portal to match `DASHBOARD_REDIRECT_URI`.
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080
DASHBOARD_REDIRECT_URI=http://localhost:8080/oauth/callback


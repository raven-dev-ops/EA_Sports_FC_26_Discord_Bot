CHANNEL_CLUB_PORTAL_ID=
CHANNEL_MANAGER_PORTAL_ID=
CHANNEL_COACH_PORTAL_ID=
CHANNEL_RECRUIT_PORTAL_ID=

CHANNEL_STAFF_MONITOR_ID=

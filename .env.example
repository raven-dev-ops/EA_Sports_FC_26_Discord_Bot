TEST_MODE=true
LOG_LEVEL=INFO
APP_ENV=development
ADMIN_DISCORD_IDS=

# Error reporting (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0

# Role overrides (optional; normally created + stored by auto-setup on invite/startup)
ROLE_COACH_ID=
ROLE_COACH_PREMIUM_ID=
ROLE_COACH_PREMIUM_PLUS_ID=
STAFF_ROLE_IDS= # comma-separated role IDs

# Channel overrides (optional; normally created + stored by auto-setup on invite/startup)
